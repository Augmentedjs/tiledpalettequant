{
  "compilerOptions": {
    "noImplicitAny": false,
    "noEmitOnError": true,
    "noEmit": false,
    "removeComments": true,
    "sourceMap": true,
    "target": "ES2022",
    "outDir": "dist",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "handlers/*": [
        "../handlers/*"
      ]
    },
    "typeRoots": [
      "node_modules/@types",
      "@types",
      "src/@types"
    ],
    "module": "es2022"
  },
  "include": ["src", "src/@types"]
}
